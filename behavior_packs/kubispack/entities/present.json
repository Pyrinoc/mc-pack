{
  "format_version": "1.21.60",
  "minecraft:entity": {
    "description": {
      "identifier": "kubi:present",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "components": {
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": "no"
        }
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      },
      "minecraft:hurt_on_condition": {},
      "minecraft:buoyant": {
        "apply_gravity": false,
        "liquid_blocks": ["minecraft:flowing_water", "minecraft:water"]
      },
      "minecraft:interact": {
        "interactions": [
          {
            "on_interact": {
              "filters": {
                "all_of": [{ "test": "is_family", "subject": "other", "value": "player" }]
              },
              "event": "kubi:present_found"
            }
          }
        ]
      }
    },
    "events": {
      "kubi:present_found": {
        "add": {
          "component_groups": ["kubi:present_found"]
        }
      },
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "add": {
              "component_groups": ["kubi:red_present"]
            },
            "weight": 1
          },
          {
            "add": {
              "component_groups": ["kubi:pink_present"]
            },
            "weight": 1
          },
          {
            "add": {
              "component_groups": ["kubi:cyan_present"]
            },
            "weight": 1
          }
        ]
      },
      "kubi:despawn": {
        "add": { "component_groups": ["kubi:despawn"] }
      }
    },
    "component_groups": {
      "kubi:despawn": {
        "minecraft:despawn": {
          "filters": {
            "test": "is_skin_id",
            "subject": "self",
            "operator": "equals",
            "value": 1
          }
        }
      },
      "kubi:present_found": {
        "minecraft:skin_id": {
          "value": 1
        },
        "minecraft:timer": {
          "time": 1.5,
          "looping": false,
          "time_down_event": {
            "event": "kubi:despawn",
            "target": "self"
          }
        }
      },
      "kubi:red_present": {
        "minecraft:variant": {
          "value": 0
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/present_red.json"
        }
      },
      "kubi:pink_present": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/present_pink.json"
        }
      },
      "kubi:cyan_present": {
        "minecraft:variant": {
          "value": 2
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/present_cyan.json"
        }
      }
    }
  }
}
