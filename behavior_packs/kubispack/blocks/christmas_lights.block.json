{
  "format_version": "1.21.60",
  "minecraft:block": {
    "description": {
      "identifier": "kubi:christmas_lights",
      "menu_category": {
        "category": "construction"
      },
      "traits": {
        "minecraft:placement_position": {
          "enabled_states": ["minecraft:block_face"]
        }
      }
    },
    "components": {
      "minecraft:collision_box": false,
      "minecraft:selection_box": {
        "origin": [-8, 4, 7],
        "size": [16, 8, 1]
      },
      "minecraft:placement_filter": {
        "conditions": [{ "allowed_faces": ["north", "south", "east", "west"] }]
      },
      "minecraft:destructible_by_mining": false,
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 15
      },
      "minecraft:geometry": "geometry.christmas_lights",
      "minecraft:material_instances": {
        "*": {
          "texture": "kubi:christmas_lights",
          "render_method": "alpha_test"
        }
      },
      "minecraft:light_emission": 7,
      "minecraft:light_dampening": 0,
      "minecraft:map_color": "#ffffff",
      "minecraft:liquid_detection": {
        "detection_rules": [
          {
            "liquid_type": "water",
            "on_liquid_touches": "no_reaction"
          }
        ]
      }
    },
    "permutations": [
      {
        "condition": "q.block_state('minecraft:block_face') == 'north'",
        "components": { "minecraft:transformation": { "rotation": [0, 0, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'east'",
        "components": { "minecraft:transformation": { "rotation": [0, 270, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'south'",
        "components": { "minecraft:transformation": { "rotation": [0, 180, 0] } }
      },
      {
        "condition": "q.block_state('minecraft:block_face') == 'west'",
        "components": { "minecraft:transformation": { "rotation": [0, 90, 0] } }
      }
    ]
  }
}
